{
  "name": "collect-mentions",
  "description": "Collect mentions from a given text string, using battle-tested `mentions-regex` package",
  "license": "Apache-2.0",
  "licenseStart": "2017",
  "scripts": {
    "lint": "xaxa",
    "test": "nyc --require esm asia",
    "gitadd": "git status --porcelain && git add -A",
    "commit-dry": "yarn gitadd && yarn commit",
    "precommit": "yarn lint && yarn test && yarn gitadd",
    "commit": "gitcommit -sS",
    "prebuild": "rm -rf dist && mkdir dist",
    "build": "ascjs src dist",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "mentions-regex": "^2.0.3"
  },
  "devDependencies": {
    "ascjs": "^4.0.0",
    "asia": "^0.19.6",
    "esm": "^3.0.72",
    "gitcommit": "^1.0.8",
    "new-release": "^5.0.0",
    "nyc": "^15.0.0",
    "xaxa": "^2.0.0"
  },
  "files": [
    "src",
    "dist"
  ],
  "main": "dist/index.js",
  "module": "src/index.js",
  "version": "0.0.0-semantically-released",
  "repository": "olstenlarck/collect-mentions",
  "homepage": "https://github.com/olstenlarck/collect-mentions",
  "author": "Charlike Mike Reagent (https://i.am.charlike.online)",
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": "xaxa"
  },
  "renovate": {
    "extends": "tunnckocore"
  },
  "nyc": {
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "lines": 100,
    "cache": true,
    "check-coverage": true,
    "reporter": [
      "lcov",
      "text"
    ],
    "exclude": [
      "test"
    ],
    "extension": [
      ".js",
      ".jsx",
      ".mjs"
    ]
  },
  "verb": {
    "run": true,
    "toc": {
      "render": true,
      "method": "preWrite",
      "maxdepth": 3,
      "footer": ""
    },
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "related": {
      "list": [
        "asia",
        "gitcommit",
        "new-release",
        "xaxa",
        "charlike"
      ]
    },
    "lint": {
      "reflinks": true
    },
    "reflinks": [
      "new-release",
      "semantic-release"
    ]
  }
}
